{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "esnext"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build", "src/log", "src/igonre", "ignore"]
}
